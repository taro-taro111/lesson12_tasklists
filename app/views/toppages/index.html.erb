<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <% if @tasklist.errors.any? %>
        <div class="alert alert-warning">
          <ul>
          <% @tasklist.errors.full_messages.each do |tasklist| %>
            <li><%= tasklist %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_for(@tasklist) do |f| %>
        <div class="form-group">
          <%= f.label :status, 'タスク名' %>
          <%= f.text_area :status, class: 'form-control', rows: 1 %>
        </div>
        
        <div class="form-group">
          <%= f.label :content, '内容' %>
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-xs-8">
      <%= render 'tasklists/tasklists', tasklists: @tasklists %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <div class="text-center">
    <h1>Welcome to the Task Lists</h1>
    <%= link_to '新規ユーザー登録', signup_path, class: 'btn btn-lg btn-primary' %>
  </div>
</div>
<% end %>