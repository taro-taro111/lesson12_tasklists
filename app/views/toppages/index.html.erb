<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <%= form_for(@tasklist) do |f| %>
        <div class="form-group">
          <%= f.label :status, 'タイトル' %>
          <%= f.text_area :status, class: 'form-control', rows: 1 %>
        </div>
        
        <div class="form-group">
          <%= f.label :content, 'コンテンツ' %>
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit '作成', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-xs-8">
      <%= render 'tasklists/tasklists', tasklists: @tasklists %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <div class="text-center">
    <h1>Welcome to the Task Lists</h1>
    <%= link_to '新規ユーザー登録', signup_path, class: 'btn btn-lg btn-primary' %>
  </div>
</div>
<% end %>