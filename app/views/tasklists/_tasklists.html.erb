<ul class="media-list">
  <% tasklists.each do |tasklist| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(tasklist.user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to tasklist.user.name, user_path(tasklist.user) %> <span class="text-muted">posted at <%= tasklist.created_at %></span>
        </div>
        <div>
          <p><%= link_to tasklist.status, tasklist %></p>
        </div>
        <div>
          <% if current_user == tasklist.user %>
            <%= link_to '編集する', edit_tasklist_path(tasklist), class: 'btn btn-default btn-xs' %>
            <%= link_to "削除する", tasklist, method: :delete, data: { confirm: "本当に削除してもよろしいですか？" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasklists %>
</ul>